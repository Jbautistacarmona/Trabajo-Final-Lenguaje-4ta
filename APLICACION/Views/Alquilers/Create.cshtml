@model PARCIAL1.Models.AlquilerCrearDto

<style>
    body {
        background-image: url('car-rental-html-template.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }

    h1 {
        text-align: center;
        color: #3498db;
        text-shadow: 2px 2px 4px #000;
        margin-bottom: 20px;
    }

    .form-container {
        max-width: 400px;
        margin: 20px auto;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }

    .btn-primary {
        background-color: #3498db;
        color: #fff;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
    }

    .back-link {
        display: block;
        margin-top: 20px;
        text-decoration: none;
        color: #3498db;
    }

        .back-link:hover {
            text-decoration: underline;
        }
</style>

@{
    ViewData["Title"] = "Crear nuevo alquiler";
}

<h1>Crear Nuevo Alquiler</h1>

<div class="form-container">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="ClienteID" class="control-label">Cliente</label>
            <select asp-for="ClienteID" asp-items="@ViewBag.Clientes" class="form-control">
                <option value="">Selecciona un cliente</option>
            </select>
            <span asp-validation-for="ClienteID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TipoVehiculoID" class="control-label">Tipo de Vehículo</label>
            <select asp-for="TipoVehiculoID" asp-items="@ViewBag.Tipovehiculos" class="form-control">
                <option value="">Selecciona un tipo de vehículo</option>
            </select>
            <span asp-validation-for="TipoVehiculoID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FechaInicio" class="control-label">Fecha de Inicio</label>
            <input asp-for="FechaInicio" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="FechaInicio" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FechaFin" class="control-label">Fecha de Fin</label>
            <input asp-for="FechaFin" class="form-control" />
            <span asp-validation-for="FechaFin" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Crear" class="btn btn-primary" />
        </div>
    </form>

    <a asp-action="Index" class="back-link">&#9664; Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



